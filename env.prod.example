# Production Environment Variables Template
# Copy this file to .env.prod and fill in your values

# Database
POSTGRES_DB=tgcursor2
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis
REDIS_URL=redis://redis:6379/0

# Telegram API (get from https://my.telegram.org/apps)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Application
SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_STRING_HERE
ENVIRONMENT=production

# Domain (for CORS and public access)
DOMAIN=yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend
REACT_APP_API_URL=https://yourdomain.com/api

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Export limits
MAX_EXPORT_ROWS=10000

